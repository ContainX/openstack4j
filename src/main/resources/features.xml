        [INFO] +- com.squareup.okhttp:mockwebserver:jar:2.1.0:test
        [INFO] |  +- com.squareup.okhttp:okhttp:jar:2.1.0:test
        [INFO] |  |  \- com.squareup.okio:okio:jar:1.0.1:test
